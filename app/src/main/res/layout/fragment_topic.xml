<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/code_background_black"
    tools:context=".view.TopicFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/code_grey_dark_model_normal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/logo_codelabz" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="22px">

                <EditText
                    android:layout_width="340dp"
                    android:layout_height="46dp"
                    android:background="@color/code_grey_dark_model_normal"
                    android:padding="7dp"
                    android:layout_marginTop="15dp"
                    android:text="Filtrar"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="30dp"
                    android:layout_marginVertical="16dp"
                    android:fontFamily="@font/dosis_extra_light"
                    android:text="@string/topics_followed"
                    android:textColor="@color/code_white_normal"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <include layout="@layout/topic_item_layout"/>
                        <include layout="@layout/topic_item_layout"/>
                        <include layout="@layout/topic_item_layout"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/dosis_extra_light"
                    android:text="@string/topics"
                    android:textColor="@color/code_white_normal"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/topic_item_layout"/>
                    <include layout="@layout/topic_item_layout"/>
                    <include layout="@layout/topic_item_layout"/>
                    <include layout="@layout/topic_item_layout"/>
                    <include layout="@layout/topic_item_layout"/>
                    <include layout="@layout/topic_item_layout"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>