<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp"
    tools:context=".view.PostTimelineFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/border_cards">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_card_intern_rating"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/border_card_intern_rating"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/likePostButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|center"
                        android:maxHeight="32dp"
                        android:maxWidth="32dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_upvote_disabled" />

                    <TextView
                        android:id="@+id/countLikes"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="8dp"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

<!--                    <ImageButton-->
<!--                        android:id="@+id/dislikePostButton"-->
<!--                        android:layout_width="18dp"-->
<!--                        android:layout_height="18dp"-->
<!--                        android:background="@null"-->
<!--                        android:layout_gravity="center|bottom"-->
<!--                        android:src="@drawable/dislike_down_button" />-->

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_card_intern"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/svg_topic_post"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <TextView
                        android:id="@+id/name_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Flutter"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/userInfoPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:maxLines="1"
                        android:text="@string/enviado_por_user_em_data"
                        android:textColor="@color/code_grey_normal"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/border_card_intern"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Titulo da Postagem"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/content_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:maxLines="3"
                        android:text="Lorem ipsum dolor sit amet, consectetur ad i pi sc ing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:text="Clique para ver mais"
                        android:textColor="@color/code_grey_normal"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_card_intern"
                        android:layout_marginTop="8dp"
                        android:gravity="bottom|start"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/comment_card_icon" />

                        <TextView
                            android:id="@+id/comments_posts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="@string/qtd_comentarios"
                            android:textColor="@color/code_grey_normal"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
