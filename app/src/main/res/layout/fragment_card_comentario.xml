<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.CardCommentFragment">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border_card_intern_rating"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/border_card_intern_rating"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageUserComment"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="top|center"
                        android:src="@drawable/profile_picture" />
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@color/code_text">

                </View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="#141516"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="8dp"
                    android:background="#141516"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#141516"
                        android:gravity="bottom|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/username_user_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/apelido_da_pessoa"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/sharedIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:maxLines="1"
                            android:text="@string/enviado_em"
                            android:textColor="@color/code_grey_normal"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/contentComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur ad i pi sc ing elitad i pi sc ing eli consectetur ad i pi sc ing elitad i pi sc ing eli "
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#141516"
                        android:gravity="bottom|start"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/likeIconButton"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@null"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/icon_heart_disabled" />

                        <TextView
                            android:id="@+id/qtdLikesComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/s_curtidas"
                            android:textColor="@color/code_grey_normal"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>